<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="chris.costas.teo">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Client.PickVehicle.PickVehicle"></activity>
        <activity
            android:name=".Client.Search.SearchActivity"
            android:exported="true"
            android:label="Search" />
        <activity
            android:name=".Business.EditAccount.EditAccount"
            android:exported="true"
            android:label="Edit account" />
        <activity
            android:name=".Business.NewAccount.CreateNewAccount"
            android:exported="true"
            android:label="Create new account"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Business.SignIn_Up.SignIn_UpOption"
            android:exported="true"
            android:label="Rent em All" />
        <activity
            android:name=".Business.Rentals.RentalsActivity"
            android:exported="true"
            android:label="Rentals" />
        <activity
            android:name=".Business.Applications.ApplicationsActivity"
            android:exported="true"
            android:label="Pending applications" />
        <activity
            android:name=".Business.Statistics.StatisticsActivity"
            android:exported="true"
            android:label="@string/statistics" />
        <activity
            android:name=".Business.VehicleManagement.VehicleManagement"
            android:exported="true"
            android:label="Vehicles" />
        <activity
            android:name=".Business.AccountOptions.AccountOptions"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name=".Business.Login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login" />
        <activity android:name=".Business.Main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>