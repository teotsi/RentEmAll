<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rent_vehicle_pic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/car_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rent_vehicle_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle vehicleData"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rent_vehicle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle id" />
    </LinearLayout>
    <LinearLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/info_vehicle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/info" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/rent_vehicle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/confirm" />
        >

        >
    </LinearLayout>
</LinearLayout>